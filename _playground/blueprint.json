{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"meta": {
		"title": "Animated Timeline plugin",
		"description": "A WordPress plugin that extends the Group block to create an animating timeline effect",
		"author": "colorful-tones"
	},
	"preferredVersions": {
		"php": "8.3",
		"wp": "latest"
	},
	"features": {
		"networking": true
	},
	"landingPage": "/?p=4",
	"steps": [
		{
			"step": "login"
		},
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "Timeline"
			}
		},
		{
			"step": "installPlugin",
			"pluginZipFile": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/wptrainingteam/animated-timeline-plugin/main/_playground/animated-timeline-plugin-v1.0.0.zip"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "installTheme",
			"themeZipFile": {
				"resource": "wordpress.org/themes",
				"slug": "dawson"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "writeFile",
			"path": "/wordpress/wp-content/mu-plugins/rewrite.php",
			"data": "<?php add_action( 'after_setup_theme', function() { global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); $wp_rewrite->flush_rules(); } );"
		},
		{
			"step": "writeFile",
			"path": "/wordpress/wp-content/post-content.md",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/wptrainingteam/animated-timeline-plugin/main/_playground/post-content.md"
			}
		},
		{
			"step": "writeFile",
			"path": "/wordpress/wp-content/WP-6.3-Lionel.png",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/wptrainingteam/animated-timeline-plugin/main/assets/images/WP-6.3-Lionel.png"
			}
		},
		{
			"step": "writeFile",
			"path": "/wordpress/wp-content/WP-6.4-Shirley.png",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/wptrainingteam/animated-timeline-plugin/main/assets/images/WP-6.4-Shirley.png"
			}
		},
		{
			"step": "writeFile",
			"path": "/wordpress/wp-content/WP-6.5-Regina.png",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/wptrainingteam/animated-timeline-plugin/main/assets/images/WP-6.5-Regina.png"
			}
		},
		{
			"step": "wp-cli",
			"command": "wp post create --post-type=page --post_title='History of WordPress major releases' --post_status='published' /wordpress/wp-content/post-content.md"
		},
		{
			"step": "wp-cli",
			"command": "wp post delete 2 3"
		}
	]
}